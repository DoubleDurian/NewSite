<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/test.css">
    
</head>
<body style="/**background-image: url(/res/darkShells.png);*/  background-size: 100% auto;background-color:#9193a0">
    <div id="wrapper">
        <div id= "sidebar-wrapper" 
             style="z-index: 1;
             position: absolute;
             width: 25%;
             height: 90%;
             overflow-y: hidden;
             border: 2px solid black;
             background-color: #42445b;
             /*background-image: url(/res/nori-01.png);*/
             background-size: 150% auto;
             background-repeat: no-repeat;
             opacity:1;">
            <a href="/Home/Studio"><img src="~/res/dsLogo.jpg"; style="width:100%; height:auto;"></a>
            <ul class="sidebar-nav">
                
                <li><a href="/Home/Nick">Nick Johnston</a></li>
                <li><a href="/Home/Haseeb">Haseeb Abid</a></li>
                <li><a href="/Home/Tom">Tom Kirton</a></li>
                
            </ul>

        </div>

    </div>
    <div  style="
        width:65%;
        height:90%;
        position:absolute;
        margin-left:30%;
        padding-left:5%;
        background-color: #e5f4f6;
        //**background-image: url(/res/Clam.png)**/;
        background-size: auto auto;
        background-repeat: no-repeat;
        border: 2px solid black;
        ">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DasStudio</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
